<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>

<!--
  This FXML contains only the fields specific to the Keys & Access Devices category.
-->
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane hgap="10" vgap="15">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="350.0" />
        </columnConstraints>

        <Label text="Key Type:" GridPane.rowIndex="0" />
        <TextField fx:id="keyTypeField" promptText="e.g., Vehicle Key, House Key" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Brand:" GridPane.rowIndex="1" />
        <TextField fx:id="brandField" promptText="e.g., Godrej, Maruti Suzuki" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    </GridPane>
</VBox>
