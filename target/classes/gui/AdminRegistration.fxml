<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="450.0" spacing="15.0" style="-fx-background-color: #343a40; -fx-padding: 40;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Project.AdminRegistrationController">
    <children>
        <Label text="New Admin Registration" textFill="white">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <TextField fx:id="usernameField" maxWidth="300.0" promptText="Username" />
        <TextField fx:id="nameField" maxWidth="300.0" promptText="Full Name" />
        <TextField fx:id="emailField" maxWidth="300.0" promptText="Email" />
        <PasswordField fx:id="passwordField" maxWidth="300.0" promptText="Password" />
        <TextField fx:id="contactField" maxWidth="300.0" promptText="Contact Number" />
        <Button onAction="#handleRegisterButtonAction" prefHeight="40.0" prefWidth="300.0" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Register Admin">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
        <Label fx:id="statusLabel" textFill="white" />
    </children>
</VBox>
