<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" spacing="20.0" style="-fx-background-color: #f0f2f5; -fx-padding: 40;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Project.LoginController">
    <children>
        <Label text="Welcome Back!">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>
        <Label text="Log in to your account" textFill="#6b6b6b">
            <font>
                <Font size="14.0" />
            </font>
        </Label>

        <TextField fx:id="usernameField" maxWidth="250.0" promptText="Username" style="-fx-background-radius: 8;" />

        <PasswordField fx:id="passwordField" maxWidth="250.0" promptText="Password" style="-fx-background-radius: 8;" />

        <Button fx:id="loginButton" onAction="#handleLoginButtonAction" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;" text="Login">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>

        <Label fx:id="statusLabel" textAlignment="CENTER" wrapText="true" />

        <Hyperlink fx:id="signupLink" onAction="#handleSignupLinkAction" text="New User? Sign up here" />
    </children>
</VBox>
