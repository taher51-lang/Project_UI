<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="TOP_CENTER" prefWidth="550.0" spacing="15.0" style="-fx-background-color: #ffffff; -fx-padding: 30;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Project.ReportFoundItemController">
    <children>
        <Label text="Report a Found Item">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Label>

        <GridPane hgap="10" vgap="15">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="350.0" />
            </columnConstraints>

            <!-- Common Fields -->
            <Label text="Item Category:" GridPane.rowIndex="0" />
            <ComboBox fx:id="categoryComboBox" prefWidth="350.0" promptText="Select a category" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Item Name:" GridPane.rowIndex="1" />
            <TextField fx:id="itemNameField" promptText="e.g., iPhone 13 Pro" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Area Found:" GridPane.rowIndex="2" />
            <TextField fx:id="areaField" promptText="e.g., Central Library, Room 301" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Date Found:" GridPane.rowIndex="3" />
            <DatePicker fx:id="datePicker" prefWidth="350.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Color:" GridPane.rowIndex="4" />
            <TextField fx:id="colorField" promptText="e.g., Blue" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label text="Distinguishing Attributes:" GridPane.rowIndex="5" />
            <TextArea fx:id="attributesArea" prefHeight="80.0" prefWidth="350.0" promptText="e.g., Small scratch on the top-left corner" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        </GridPane>

        <!-- Image Upload Section -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Image (Optional):"/>
            <Button onAction="#handleChooseImageAction" text="Choose File..."/>
            <Label fx:id="selectedImageLabel" text="No file selected."/>
        </HBox>

        <!-- This is the container where category-specific fields will be loaded -->
        <VBox fx:id="dynamicFieldsContainer" spacing="15.0" />

        <Button onAction="#handleSubmitButtonAction" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Submit Report">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Button>

        <Label fx:id="statusLabel" textAlignment="CENTER" />
    </children>
</VBox>
